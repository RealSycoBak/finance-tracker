<% if obj.errors.any? %>
    <div class="alert alert-danger alert-dismissible fade show position-relative" role="alert">
        <h4 class="alert-heading"><%= pluralize(obj.errors.count, "error") %> prohibited this <%= obj.class.name.downcase %> from being saved</h4>
        <ul>
          <% obj.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
        <button type="button" class="close position-absolute top-0 end-0 m-2 btn btn-primary bg-danger text-white border-danger" data-bs-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
<% end %>